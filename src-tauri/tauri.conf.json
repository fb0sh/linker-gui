{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "linker-gui",
  "version": "0.1.1",
  "identifier": "com.fb0sh.linker-gui",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "linker-gui @https://github.com/fb0sh/linker-gui:v0.1.1",
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
